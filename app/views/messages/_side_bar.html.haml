.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-bar__header__box__username
        = current_user.name
      %ul.side-bar__header__box__menu
        %li.side-bar__header__box__new-group
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.side-bar__header__box__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__group-name
            = group.name
          .group__last-message
